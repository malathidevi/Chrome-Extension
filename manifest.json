{
  "manifest_version": 3,
  "name": "LinkedIn Profile Scraper",  
  "version": "1.0",
  "description": "Scrapes profile data from LinkedIn profiles.",
  "permissions": [
    "activeTab",
    "scripting"          
  ],
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/in/*"],  
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"   
  }
}
